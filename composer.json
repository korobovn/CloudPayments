{
    "name": "korobovn/cloud-payments",
    "description": "Cloud Payments PHP-client",
    "keywords": ["cloud-payments"],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^7.1.3",
        "ext-json": "*",
        "illuminate/support": "^5.5 || ^6.0",
        "psr/http-client": "~1.0",
        "guzzlehttp/guzzle": "~6.0",
        "tarampampam/wrappers-php": "^1.2"
    },
    "require-dev": {
        "phpunit/phpunit": "~7.5 || ^8",
        "phpstan/phpstan": "^0.11.19",
        "laravel/laravel": "^5.5 || ^6.0",
        "fzaninotto/faker": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "Korobovn\\CloudPayments\\": "src/CloudPayments/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Korobovn\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Korobovn\\CloudPayments\\CloudPaymentsServiceProvider"
            ]
        }
    },
    "scripts": {
        "unit-test": "@php ./vendor/bin/phpunit --group unit --no-coverage --colors=always",
        "unit-test-cover": "@php ./vendor/bin/phpunit --group unit --coverage-html='./coverage'",
        "phpstan": "@php ./vendor/bin/phpstan analyze --no-progress --ansi --level=max ./src",
        "php-cs-fixer-check": "@php ./vendor/bin/cs-fix --dry-run --diff --format=txt --ansi",
        "test": [
            "@phpstan",
            "@unit-test"
        ]
    }
}
